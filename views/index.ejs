<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>create user</title>
</head>
<body>
    <div class="container">
        <a class="portal" href="/admin">Bank Employee portal</a>
        <form action="/registr" method="post">
            <div class="title">
                <h1>Istifadeci qeydiyati</h1>
            </div>
            <div class="username">
                <input type="text" required name="name" placeholder="Adiniz">
            </div>
            <div class="username">
                <input type="text" required name="surname" placeholder="Soyadiniz">
            </div>
            <div class="username">
                <input type="text" required name="aze" placeholder="AZE">
            </div>
            <div class="username">
                <input type="text" required name="fin" placeholder="FIN">
            </div>
            <div class="username">
                <input type="text"required  name="email" placeholder="email">
            </div>
            <div class="username" >
               <select  id="" name="role" required>
                   <option value="role1">Role 1</option>
                   <option value="role2">Role 2</option>
                   <option value="role3">Role 3</option>
                   <option value="role4">Role 4</option>
               </select>
            </div>
            <div class="password">
                <input type="hidden"  id="aut" name="authority" value="false" >
                <input type="text" required  id="pass" name="password" placeholder="password">
                <div id="randomlypaswordgenerator">randomly password generator</div>
            </div>

            
            <div class="button">
                <button type="submit">Qeydiyatdan kecin</button>
            </div>
            <div class="button">
                <a href="/passchange">Shifreni deyismek</a>
            </div>
        </form>

    </div>
    <script>
        document.getElementById("randomlypaswordgenerator").addEventListener("click",()=>{
            let date= new Date()

            let randompasword= `${Date.now()}%${date.getSeconds()}%${Math.random(date.getUTCFullYear() * 10)}`
            console.log(randompasword);
            document.querySelector("#pass").value=randompasword
            document.querySelector("#aut").value="true"

        })
        
    </script>
</body>
</html>